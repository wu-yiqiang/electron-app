{
  "name": "local2send",
  "private": true,
  "version": "1.0.0",
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview",
    "build-win": "vite build && electron-builder --win",
    "build-linux": "vite build && electron-builder --linux",
    "build-mac": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "element-plus": "^2.2.30",
    "fast-glob": "^3.2.12",
    "sass": "^1.58.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-svg-loader": "^4.0.0",
    "vue": "^3.2.25",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "@vueuse/electron": "^8.5.0",
    "electron": "^19.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "rimraf": "^3.0.2",
    "svg-sprite-loader": "^6.0.11",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vite-plugin-electron": "^0.4.5",
    "vue-tsc": "^0.34.7"
  },
  "build": {
    "appId": "com.local2send.desktop",
    "productName": "local2send",
    "asar": true,
    "copyright": "Copyright © 2022 local2send",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "icon": "./src/assets/local2send.png",
      "name": "local2send",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./src/assets/local2send.png",
      "target": [
        {
          "target": [
            "nsis",
            "exe"
          ],
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    },
    "extends": null
  }
}
